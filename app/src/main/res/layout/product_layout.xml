<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <TextView
        android:id="@+id/nameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="11dp"
        android:text="Nombre"
        android:textSize="20sp"
        android:textStyle="bold"
        android:visibility="visible"
        android:layout_marginLeft="40dp"
        android:layout_alignParentLeft="true" />

    <TextView
        android:id="@+id/precioTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/nameTextView"
        android:layout_below="@+id/nombreEditTxt"
        android:text="$ precio"
        android:textSize="18sp"
        android:visibility="visible"
        android:layout_alignLeft="@+id/nameTextView" />

    <Button
        android:id="@+id/editBtn"
        android:layout_width="64dp"
        android:layout_height="33dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="107dp"
        android:background="@drawable/circle_button"
        android:drawableTint="#FFFFFF"
        android:drawableTop="@drawable/ic_edit"
        android:text="DELETE"
        android:visibility="visible"
        android:layout_alignParentRight="true"
        android:layout_marginRight="107dp" />

    <Button
        android:id="@+id/okBtn"
        android:layout_width="wrap_content"
        android:layout_height="33dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="49dp"
        android:background="@drawable/circle_button"
        android:drawableTint="#FFFFFF"
        android:drawableTop="@drawable/ic_done"
        android:text="DELETE"
        android:visibility="invisible"
        android:layout_alignParentRight="true"
        android:layout_marginRight="49dp" />

    <Button
        android:id="@+id/deleteBtn"
        android:layout_width="64dp"
        android:layout_height="33dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="24dp"
        android:background="@drawable/circle_button"
        android:drawableTint="#FFFFFF"
        android:drawableTop="@drawable/ic_delete_black_24dp"
        android:text="DELETE"
        android:visibility="visible"
        android:layout_alignParentRight="true"
        android:layout_marginRight="24dp" />

    <EditText
        android:id="@+id/nombreEditTxt"
        android:layout_width="151dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="35dp"
        android:ems="10"
        android:hint="Nombre"
        android:inputType="textPersonName"
        android:visibility="invisible"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="35dp" />

    <EditText
        android:id="@+id/precioEditTxt"
        android:layout_width="151dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/nombreEditTxt"
        android:layout_below="@+id/nameTextView"
        android:ems="10"
        android:hint="Precio"
        android:imeOptions="actionDone"
        android:inputType="textPersonName|number|numberDecimal"
        android:selectAllOnFocus="false"
        android:visibility="invisible"
        android:layout_alignLeft="@+id/nombreEditTxt" />

</RelativeLayout>